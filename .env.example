# Configuration DomoHub
# Copiez ce fichier en .env et adaptez les valeurs

# Environnement
ENVIRONMENT=development

# Sécurité
SECRET_KEY=votre_clé_secrète_très_longue_et_sécurisée_ici
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
BCRYPT_ROUNDS=12

# Base de données
DATABASE_URL=sqlite:///./domohub.db
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10

# Serveur
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_DEBUG=false
SSL_ENABLED=false

# MQTT
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=

# Contrôle vocal
VOICE_ENABLED=true
VOICE_RECOGNITION_ENGINE=google
VOICE_SYNTHESIS_ENGINE=pyttsx3
VOICE_LANGUAGE=fr-FR
VOICE_WAKE_WORD=domohub

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=./logs/domohub.log

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Dispositifs
DEVICES_DISCOVERY_ENABLED=true
DEVICES_DISCOVERY_INTERVAL=300
DEVICES_AUTO_ADD=false

# Plugins
PLUGINS_ENABLED=true
PLUGINS_AUTO_LOAD=true

# Performance
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
WEBSOCKET_PING_INTERVAL=20
